<SettingsChip>
    pos_hint: {"center_y": 0.5, "center_x": 0.5}
    line_color: app.theme_cls.disabled_hint_text_color
    font_size: 40
    size_hint: 0.8, None
    toggled: True
    selected: self.toggled
    check: self.toggled
    icon_left: "check-circle-outline" if self.toggled else "circle-off-outline"
    on_press: app.toggle_chip(self)
    icon_left_color: (0, 1, 0, 1) if self.toggled else (1, 0, 0, 1)

<MultiChip>
    pos_hint: {"center_y": 0.5, "center_x": 0.5}
    line_width: 2
    font_size: 40
    size_hint: None, None
    selected: self.toggled
    check: self.toggled
    toggled: False
    icon_left: "check-bold"
    icon_left_color: (0, 1, 0, 1) if self.toggled else (0, 1, 0, 0)
    on_press: app.toggle_multi_chip(self)

<GIF>:
    fit_mode: "contain"
    size: self.texture_size

<BaseBtn>
    icon_size: 50
    theme_text_color: "Custom"
    text_color: 1, 1, 1, 1
    radius: [15]
    theme_icon_color: "Custom"
    font_style: "H6"
    pos_hint: {"center_y": 0.5, "center_x": 0.5}

<NoRippleBaseBtn>

<BaseTextField>
    font_size: 35
    helper_text: "Falsch!"
    helper_text_mode: "on_error"
    size_hint_x: 0.75
    pos_hint: {"center_x": .5}
    line_color_focus: 0, 0.5, 1, 1
    color_mode: "Custom"
    fill_color: 0.8, 0.9, 1, 1
    mode: "fill"
    icon_left: "card-search"
    icon_left_color_normal: (76/255, 129/255, 161/255, 1)
    icon_left_color_focused: (76/255, 129/255, 161/255, 1)
    keyboard_suggestions: True

<SettingsField@MDTextField>
    font_size: 35
    helper_text: "Dieses Feld muss ausgefüllt sein"
    helper_text_mode: "on_error"
    size_hint_x: 0.75
    pos_hint: {"center_x": .5}
    line_color_focus: 0, 0.5, 1, 1
    color_mode: "Custom"
    fill_color: 0.8, 0.9, 1, 1
    mode: "fill"
    icon_left_color_normal: (76/255, 129/255, 161/255, 1)
    icon_left_color_focused: (76/255, 129/255, 161/255, 1)
    keyboard_suggestions: True

<ListItem>
    on_size:
        self.ids._right_container.width = container.width*5/4
        self.ids._right_container.x = container.width*5/4

    MDLabel:
        text: root.txt
        theme_text_color: "Custom"
        text_color: (1, 1, 1, 1)
        font_size: 30
        y: root.y + 10
        x: root.x + 20

    ListItemContainer:
        id: container
        padding: -150, 0
        spacing: 80
        valign: "center"

        MDIconButton:
            icon: "minus"
            theme_text_color: "Custom"
            text_color: (1, 0, 0, 1)
            icon_size: 75
            on_press: app.open_remove_dialog(root)

        MDIconButton:
            toggling_options: True
            on_press: app.toggle_chip(self)
            toggled: True
            icon: "check-circle-outline" if self.toggled else "circle-off-outline"
            theme_text_color: "Custom"
            text_color: (0, 1, 0, 1) if self.toggled else (1, 0, 0, 1)
            icon_size: 60

<ListItemHeader>
    bg_color: (0.6, 0.5412, 0.4471, 1)

    on_size:
        self.ids._right_container.width = container.width * 4/3
        self.ids._right_container.x = container.width * 4/3

    MDLabel:
        text: "Vokabel"
        theme_text_color: "Custom"
        text_color: (1, 1, 1, 1)
        bold: True
        font_size: 35
        y: root.y
        x: root.x + 20

    ListItemContainer:
        id: container
        padding: -210, 0

        MDLabel:
            text: "Entfernen?"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            bold: True
            font_size: 30

        MDLabel:
            text: "Abfragen?"
            theme_text_color: "Custom"
            text_color: (1, 1, 1, 1)
            bold: True
            font_size: 30

        Widget:

<ItemSeparator>
    size_hint_y: None
    height: 25

<HeaderSeparator@MDWidget>
    size_hint_y: None
    height: 5
    md_bg_color: (0.6, 0.5412, 0.4471, 1)

<ScoreLabel@MDLabel>
    theme_text_color: "Custom"
    font_style: "H5"
    font_size: 40
    size_hint_y: None
    size: self.texture_size
    halign: "right"

<BaseLabel>
    size_hint: 1, None
    size: self.texture_size
    halign: "center"
    pos_hint: {"center_x": .5}

<Counter@MDCard>
    border_radius: 35
    radius: [35]
    size_hint: None, None
    height: 200
    width: 365
    line_color: app.theme_cls.disabled_hint_text_color
    pos_hint: {"center_x": 0.5}
    title_text: ""

    MDBoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": 0.5}

        Widget:
            size_hint_y: 0.1

        MDLabel:
            size_hint_y: 0.15
            text: root.title_text
            halign: "center"
            bold: True

        MDBoxLayout:
            size_hint_y: 0.75
            orientation: "horizontal"

            MDIconButton:
                icon: 'plus-box-outline'
                pos_hint: {'center_y': .5, 'center_x': .25}
                on_press: app.increase_counter(root)
                theme_text_color: "Custom"
                text_color: (0, 1, 0, 1)
                icon_size: 60

            MDLabel:
                id: current_count
                font_style: 'H5'
                halign: 'center'
                pos_hint: {'center_y': .5, 'center_x': .5}

            MDIconButton:
                icon: 'minus-box-outline'
                pos_hint: {'center_y': .5, 'center_x': .75}
                on_press: app.decrease_counter(root)
                theme_text_color: "Custom"
                text_color: (1, 0, 0, 1)
                icon_size: 60


MDBoxLayout:
    orientation: "vertical"
    md_bg_color: (0.92, 0.84, 0.7, 1)

    MDBottomNavigation:
        id: nav

        MDBottomNavigationItem:
            name: "screen 1"
            text: "Abfrage"
            icon: "file-question"

            MDBoxLayout:
                orientation: "vertical"
                id: main_box
                spacing: 30

                Widget:
                    size_hint_y: None
                    height: 10

                MDLabel:
                    id: current_q
                    theme_text_color: "Custom"
                    text_color: (1, 1, 1, 1)
                    font_size: 35
                    bold: True
                    size_hint_y: None
                    size: self.texture_size
                    halign: "center"
                
                BaseTextField:
                    id: validate_field
                    hint_text: "Eingabe"
                    font_size: 40
                    on_text_validate: app.submit_answer(*args)

                MDBoxLayout:
                    size_hint_x: 1
                    adaptive_height: True
                    orientation: "horizontal"
                    spacing: 30

                    Widget:
                        size_hint_x: .15

                    NoRippleBaseBtn:
                        id: basebtn
                        size_hint_x: .6
                        font_style: "H6"
                        theme_icon_color: "Custom"
                        md_bg_color: 0.05, 0.36, 0.53, 1
                        line_color: 0.31, 0.71, 0.86, 1
                        ripple_color: 0, 0.22, 0.39, 0.2
                        icon_color: 1, 1, 1, 1
                        text: "Nächste Frage"
                        icon: "progress-question"
                        on_press: app.start_quiz()

                    BaseBtn:
                        size_hint_x: .125
                        id: stop_btn
                        font_style: "Body2"
                        theme_icon_color: "Custom"
                        line_color: "orange"
                        ripple_color: 1, 0, 0, 0.3
                        md_bg_color: 0.686, 0.133, 0.133
                        icon_color: "orange"
                        icon: "stop"
                        text: "Stop"
                        on_press: app.stop_btn_pressed()

                    Widget:
                        size_hint_x: .125

                MDLabel:
                    id: timed_out_label
                    text_color: (1, 0, 0, 1)
                    halign: "center"
                    font_size: 30
                    theme_text_color: "Custom"
                    size_hint: 1, None
                    size: self.texture_size
                    markup: True

            RelativeLayout:
                size_hint: None, None
                id: block_container

                Image:
                    fit_mode: "contain"
                    size: root.size
                    source: "./data/block.png"

            RelativeLayout:
                size_hint: 0.2, 0.4
                y: timed_out_label.y * 4/5
                pos_hint: {"right": .97}

                MDBoxLayout:
                    orientation: "vertical"

                    ScoreLabel:
                        id: correct_counter
                        text: "Richtig: 0"
                        text_color: (0, 1, 0, 1)
                    ScoreLabel:
                        id: incorrect_counter
                        text: "Falsch: 0"
                        text_color: (1, 0, 0, 1)

        MDBottomNavigationItem:
            name: "screen 2"
            text: "Wörter"
            icon: "book-search"

            MDScrollView:
                do_scroll_x: False
                do_scroll_y: True
                effect_cls: "ScrollEffect"

                MDBoxLayout:
                    orientation: "vertical"
                    size_hint_y: None
                    height: self.minimum_height
                    id: current_words_box

                    HeaderSeparator:
                    ListItemHeader:
                        id: list_header
                    HeaderSeparator:

        MDBottomNavigationItem:
            name: "screen 3"
            text: "Settings"
            icon: "cog"

            MDScrollView:
                id: SettingsScrollView
                do_scroll_x: False
                do_scroll_y: True
                effect_cls: "ScrollEffect"

                MDBoxLayout:
                    orientation: "vertical"
                    spacing: 30
                    valign: "bottom"
                    size_hint_y: None
                    height: self.minimum_height

                    Widget:
                        size_hint_y: 0.001
                    Widget:
                        size_hint_y: 0.001

                    MDLabel:
                        text: "   Vokabeln hinzufügen:"
                        font_size: 45
                        theme_text_color: "Custom"
                        text_color: (0.2549, 0.4118, 0.8824, 1)

                    Widget:

                    SettingsField:
                        id: get_data_field
                        hint_text: 'Verben (durch Komma abtrennen)'
                        font_size: 35
                        icon_left: "archive-edit-outline"
                        on_text_validate: app.validate_get_data()

                    BaseBtn:
                        id: get_data_btn
                        size_hint_x: 0.6
                        font_style: "H5"
                        theme_icon_color: "Custom"
                        md_bg_color: 0.18, 0.36, 0.18, 1
                        line_color:  0.41, 0.75, 0.41, 1
                        ripple_color: 0.25, 0.42, 0.25, 0.3
                        icon_color: 0.75, 0.92, 0.75, 1
                        text: "Hinzufügen"
                        icon: "archive-plus"
                        on_press: app.validate_get_data()

                    BaseLabel:
                        text_color: (0, 1, 0, 0)
                        pos_hint: {"center_x": .5}
                        font_style: "H5"
                        theme_text_color: "Custom"
                        id: success_label

                    BaseLabel:
                        text_color: (1, 0, 0, 0)
                        pos_hint: {"center_x": .5}
                        font_style: "H5"
                        theme_text_color: "Custom"
                        id: failure_label

                    Widget:

                    MDLabel:
                        text: "   Schwierigkeit:"
                        font_size: 45
                        theme_text_color: "Custom"
                        text_color: (0.2549, 0.4118, 0.8824, 1)

                    Widget:

                    MDStackLayout:
                        id: difficulty_stack
                        orientation: "lr-tb"
                        spacing: 30
                        padding: get_data_field.x/2, 20

                        MultiChip:
                            id: very_easy
                            text: "Sehr Einfach"
                            line_color: (0.6, 0.8, 0.95, 1)

                        MultiChip:
                            id: easy
                            text: "Einfach"
                            line_color: (0.0, 0.5, 1.0, 1)

                        MultiChip:
                            id: moderat
                            text: "Moderat"
                            line_color: (1.0, 0.6, 0.0, 1)

                        MultiChip:
                            id: hard
                            text: "Schwierig"
                            line_color:  (0.7, 0.2, 0.2, 1)

                    ItemSeparator:
                        height: moderat.height + hard.height + easy.height + very_easy.height

                    MDLabel:
                        text: "   Allgemein:"
                        font_size: 45
                        theme_text_color: "Custom"
                        text_color: (0.2549, 0.4118, 0.8824, 1)

                    Widget:

                    SettingsChip:
                        id: delete_confirmation
                        text: "Nach Löschbestätigung fragen?"

                    SettingsChip:
                        id: ignore_gender_parti
                        text: "Partizipien Geschlecht ignorieren?"

                    SettingsChip:
                        id: ignore_gender_geru
                        text: "Gerundivum Geschlecht ignorieren?"

                    SettingsChip:
                        id: exclude_imp2
                        text: "Imperativ II ausschließen?"

                    SettingsChip:
                        id: exclude_supina
                        text: "Supina ausschließen?"

                    Widget:

                    MDLabel:
                        text: "   Sonstiges:"
                        font_size: 45
                        theme_text_color: "Custom"
                        text_color: (0.2549, 0.4118, 0.8824, 1)

                    Widget:

                    BaseBtn:
                        id: delete_btn
                        size_hint_x: .6
                        font_style: "Body2"
                        theme_icon_color: "Custom"
                        line_color: "orange"
                        ripple_color: 1, 0, 0, 0.3
                        md_bg_color: 0.686, 0.133, 0.133
                        icon_color: "orange"
                        icon: "scoreboard-outline"
                        text: "Score zurücksetzen"
                        on_press: app.reset_correct_incorrect_counters()

                    Widget:

                    MDLabel:
                        id: score_label
						text: "Hinweis: Alle Daten stammen von www.frag-caesar.de"
                        font_style: "Subtitle1"
						pos_hint: {"center_x": 0.545}
						size_hint: 1, None
						size: self.texture_size

                    ItemSeparator:
                        height: score_label.height

